    cropped1 = document.querySelector(".cropped1"),
    dwn1 = document.querySelector(".download"),
    upload1 = document.querySelector("#file-input1"),
    cropper1 = "";

// When a file is uploaded
upload1.addEventListener('change', (e) => {
    // Check if files were uploaded
    if (e.target.files.length) {
        const reader = new FileReader();
        reader.onload = (e) => {
            if (e.target.result) {
                let img = document.createElement("img");
                img.id = "image1";
                img.src = e.target.result;

                result1.innerHTML = ""; // Clear previous image
                result1.appendChild(img); // Append new image
                save1.classList.remove("hide"); // Show save button

                // Initialize the cropper
                cropper1 = new Cropper(img, {
                    aspectRatio: 1 / 1,
                    viewMode: 3
                });
            }
        };
        reader.readAsDataURL(e.target.files[0]);
    }
});

// When the save button is clicked
save1.addEventListener("click", (e) => {
    e.preventDefault();

    // Get cropped image data
    let imgSrc = cropper1.getCroppedCanvas({
        width: 350 // Set the width of the cropped image
    });

    // Check if imgSrc is valid
    if (imgSrc) {
        imgSrc.toBlob(function (blob) {
            if (blob) {
                console.log("Blob created successfully:", blob);
                let imageUrl = URL.createObjectURL(blob); // Create image URL from blob
                console.log("Image URL:", imageUrl);

                // Display the cropped image in the preview
                cropped1.classList.remove("hide");
                img_result1.classList.remove("hide");
                cropped1.src = imageUrl;

                // Set download attributes
                // dwn1.classList.remove("hide");
                // dwn1.download = "imagename.png";
                // dwn1.href = imageUrl;

                // Convert the blob into a file and simulate file input update
                let file = new File([blob], "cropped_image1.png", { type: blob.type });
                let dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);

                // Assign the cropped image file to the file input element
                upload1.files = dataTransfer.files;

                console.log("File input updated with cropped image");
            } else {
                console.error("Blob is null or invalid.");
            }
        });
    }

    // Log cropped image
    console.log("Image is: ", imgSrc);
});





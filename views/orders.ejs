function showCancelConfirmation(no) {
        Swal.fire({
            title: 'Cancel Order',
            html:
            '<p>Select a reason for cancellation:</p>' +
            '<div style="text-align: left;">' +
                '<input type="radio" id="reason1" name="cancelReason" value="Item no longer needed" style="margin-right: 10px;">' +

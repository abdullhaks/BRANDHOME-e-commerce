                                                <td><%= i + 1 %></td>
                                                <td><%= orders[i].orderDate.toLocaleDateString() %></td>
                                                <td><%= orders[i].orderId%></td>
                                                <td><%= orders[i].grandTotal %></td>
                                                <td><%= orders[i].paymentOption %></td>
                                                
                                                    <%if(orders[i].paymentOption=="online payment"&&orders[i].paymentStatus==0){ %>
                                                    <td>   
                                                        <a class="btn-sm btn-warning completePayment" href="" data-id="<%= orders[i]._id %>">complete payment</a>
                                                    </td>
                                                    <td></td>
                                                    <%}else{%>
                                                        <td></td>
                                                        <td>
                                                            <a href="/downloadInvoice/<%= orders[i]._id %>" class="text-success">get invoice</a>

                                                        </td>
                                                    <% } %>
                                                
                                               
                                            </tr>
                                            
                                            <% for (let j = 0; j < orders[i].items.length; j++) { %>
                                                <tr>
                                                    <td></td>
                                                    <td>Item <%=j+1%></td>
                                                    <td>
                                                        <a href="/orderManagement?orderId=<%=orders[i]._id%>&itemNo=<%= j %>">
                                                            <%= orders[i].items[j].productName %>, <%= orders[i].items[j].size %>, <%= orders[i].items[j].color %>
                                                        </a>
                                                    </td>
                                                    <td><%= orders[i].items[j].price %>x<%= orders[i].items[j].quantity %></td>
                                                    <td><%= orders[i].items[j].payAmount %></td>
                                                    <td><%= orders[i].items[j].status %></td>
                                                    <td>

                                                        <%if(orders[i].paymentOption=="online payment"&&orders[i].paymentStatus==0){ %>

                                                        <%}else {%>
                                                        <% if (orders[i].items[j].status !== 'delivered' && orders[i].items[j].status !== 'cancelled') { %>
                                                            <form id="cancelOrderForm<%= j %>" method="post" action="/cancelOrder?orderId=<%=orders[i]._id%>&itemNo=<%= j %>">
                                                                <input type="hidden" id="cancelReason" name="cancelReason">
                                                                <button class="btn btn-danger" type="button" onclick="showCancelConfirmation('<%= j %>')">CANCEL ORDER</button>
                                                            </form>
                                                        <% } %>
                            
                                                        <% if (orders[i].items[j].status == 'cancelled') { %>
                                                            <p class="text-danger">Cancelled</p>
                                                        <% } %>
                            
                                                        <% if (orders[i].items[j].status == 'delivered') { %>
                                                            <% if (orders[i].items[j].returnStatus == 0 && currentTime < new Date(orders[i].items[j].returnExp)) { %>

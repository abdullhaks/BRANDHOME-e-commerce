<script>

function showCancelConfirmation() {
        Swal.fire({
            title: 'Cancel Order',
            html:
            '<p>Select a reason for cancellation:</p>' +
            '<input type="radio" id="reason1" name="cancelReason" value="Item no longer needed">' +
            '<label for="reason1"> Item no longer needed</label><br>' +
            '<input type="radio" id="reason2" name="cancelReason" value="Found a better deal">' +
            '<label for="reason2"> Found a better deal</label><br>' +
            '<input type="radio" id="reason3" name="cancelReason" value="Ordered by mistake">' +
            '<label for="reason3"> Ordered by mistake</label>',
            showCancelButton: true,
            confirmButtonText: 'Confirm',
            cancelButtonText: 'Close',
            preConfirm: () => {
                 
                 document.getElementById('cancelReason').value = document.querySelector('input[name="cancelReason"]:checked').value;
            }
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('cancelOrderForm').submit();
            }
        });
    };



    function showReturnConfirmation() {
        Swal.fire({
            title: 'Return Order',
            html:
            '<p>Select a reason for return this order:</p>' +
            '<input type="radio" id="reason1" name="returnReason" value="wrong">' +
            '<label for="reason1"> shipped wrong product or size</label><br>' +
            '<input type="radio" id="reason2" name="returnReason" value="damaged">' +
            '<label for="reason2"> product was damaged or defective</label><br>' +
            '<input type="radio" id="reason3" name="returnReason" value="not match">' +
            '<label for="reason3">product did not match the description</label>',
            showCancelButton: true,
            confirmButtonText: 'Confirm',
            cancelButtonText: 'Close',
            preConfirm: () => {
         
                 document.getElementById('returnReason').value = document.querySelector('input[name="returnReason"]:checked').value;
            }
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('returnOrderForm').submit();
            }
        });
    }
</script>


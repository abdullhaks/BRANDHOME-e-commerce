                                                                    <input type="hidden" id="returnReason" name="returnReason">
                                                                    <button class="btn btn-warning" type="button" onclick="showReturnConfirmation('<%= j %>')">RETURN ORDER</button>
                                                                </form>
                                                            <% } else if (orders[i].items[j].returnStatus == 1) { %>
                                                                <p class="text-primary">Returned - Pending</p>
                                                            <% } else if (orders[i].items[j].returnStatus == 2) { %>
                                                                <p class="text-primary">Returned</p>
                                                            <% } else if (orders[i].items[j].returnStatus == 3) { %>
                                                                <p class="text-primary">Returned - Declined</p>
                                                            <% } %>
                                                        <% } %>

                                                        <% } %>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        <% } %>

            '</div>',
            showCancelButton: true,
            confirmButtonText: 'Confirm',
            cancelButtonText: 'Close',
            preConfirm: () => {
                 
                 document.getElementById('cancelReason').value = document.querySelector('input[name="cancelReason"]:checked').value;
            }
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('cancelOrderForm'+no).submit();
            }
        });
    };




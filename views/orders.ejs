    <div class="main-content pt-5">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Date</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th >Total Price</th>
                                        <th >Order Status</th>
                                        <th class="text-right"></th>
                                        
                                    </tr>
                                </thead>
    
                                <% if (orders.length > 0) {
                                    for (let i = 0; i < orders.length; i++) { %>
                                <tbody>
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><%= orders[i].orderDate %></td>
                                        <td>  <a href="/orderManagement?orderId= <%= orders[i]._id %>"><%= orders[i].purchaseDetails.productName %>, <%= orders[i].purchaseDetails.size %>, <%= orders[i].purchaseDetails.color %></a></td>
                                        <td><%= orders[i].purchaseDetails.quantity %></td>
                                        <td><%= orders[i].purchaseDetails.payAmount %></td>
                                        <td><%= orders[i].status %></td>
                                        
                                       
                                        <td>
                                            <% if(orders[i].status !== 'delivered' && orders[i].status !== 'cancelled') { %>
                                                <form id="cancelOrderForm" method="post" action="/cancelOrder/<%= orders[i]._id %>">

                                                    <input type="hidden" id="cancelReason" name="cancelReason">
                                                    <button class="btn btn-danger" type="button" onclick="showCancelConfirmation()">CANCEL ORDER</button>
                                                </form>
                                            <% } %>

                                            <% if(orders[i].status == 'cancelled') { %>
                                                <p class="text-danger">Cancelled</p>
                                            <% } %>

                                            <% if(orders[i].status == 'delivered' & orders[i].returnStatus == 0 & currentTime < orders[i].returnCanceledOn) { %>
                                                <form id="returnOrderForm" method="post" action="/returnOrder/<%= orders[i]._id %>">

                                                    <input type="hidden" id="returnReason" name="returnReason">
                                                    <button class="btn btn-warning" type="button" onclick="showReturnConfirmation()">RETURN ORDER</button>
                                                </form>
                                            <% } %>

                                            <% if(orders[i].status == 'delivered' & orders[i].returnStatus == 1) { %>
                                                <p class="text-primary">returned - pending </p>
                                            <% } %>

                                            <% if(orders[i].status == 'delivered' & orders[i].returnStatus == 2) { %>
                                                <p class="text-primary">returned</p>
                                            <% } %>

                                            <% if(orders[i].status == 'delivered' & orders[i].returnStatus == 3) { %>
                                                <p class="text-primary">returned - declined</p>
                                            <% } %>

                                            <% if(orders[i].status == 'delivered' & currentTime >= orders[i].returnCanceledOn) { %>
                                                <p class="text-success">delivered</p>
                                            <% } %>
                                        </td>
                    
                                       
                                    </tr>
                                </tbody>
                                <% }
                                   
                                
                            } else { %>
    
                                <tbody>
                                <tr>
                                    <td colspan="5">
                                        Users not found...
                                    </td>
                                </tr>
                            </tbody>
                            <% } %>
                            </table>

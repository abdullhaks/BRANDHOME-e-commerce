    document.getElementById("productName").innerHTML = `
        <p class="text-dark">${order.purchaseDetails.productBrand} ${order.purchaseDetails.productName}, 
        ${order.purchaseDetails.size}, ${order.purchaseDetails.color}</p>
    `;

    document.getElementById("quantity").innerHTML = `
        <p class="text-dark">${order.purchaseDetails.quantity}</p>
    `;

    document.getElementById("price").innerHTML = `
        <p class="text-dark">Rs ${order.purchaseDetails.price}</p>
    `;

    document.getElementById("orderDate").innerHTML = `
        <p>${order.orderDate}</p>
    `;

    document.getElementById("id").innerHTML = `
        <p>${order._id}</p>
    `;

    document.getElementById("shippingCharge").innerHTML = `
        <p>Rs ${order.purchaseDetails.shippingCharge}</p>
    `;

    document.getElementById("youSave").innerHTML = `
        <p>Rs ${order.purchaseDetails.youSave}</p>
    `;

    document.getElementById("payAmount").innerHTML = `
        <p>Rs ${order.purchaseDetails.payAmount}</p>
    `;

    document.getElementById("Address").innerHTML = `
        <p>${order.address.firstName} ${order.address.lastName}<br>
        ${order.address.shippingEmail}<br>
        ${order.address.mobile}<br>
        ${order.address.street}, ${order.address.city}<br>
        ${order.address.state}, ${order.address.country}<br>
        pin: ${order.address.postalCode}</p>
    `;

    document.getElementById("paymentOption").innerHTML = `
        <p>${order.paymentOption}</p>
    `;

    // Status and Dates
    let statusContent = '';
    if (order.status === "dispatched") {
        statusContent = `<p class="text-primary">${order.status} - ${order.dispatchedDate}</p>`;
    } else if (order.status === "delivered") {
        statusContent = `<p class="text-success">${order.status} - ${order.deliveredDate}</p>`;
    } else if (order.status === "cancelled") {
        statusContent = `<p class="text-danger">${order.status} - ${order.cancelledDate}</p>`;
    } else if (order.status === "pending") {
        statusContent = `<p>pending</p>`;
    }

    document.getElementById("Status").innerHTML = statusContent;

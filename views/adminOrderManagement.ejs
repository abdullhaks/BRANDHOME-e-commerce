<script>

function popup(popupMsg) {
    Swal.fire({
        title: 'Message',
        text: popupMsg,
        //icon: 'success',
        timer: 10000,
        showConfirmButton: false,
    });
};

function showConfirmation(orderId, newStatus, currentPage) {
    Swal.fire({
        title: 'Confirm Order Status',
        html: '<p>Are you sure you want to update the order status?</p>',
        showCancelButton: true,
        cancelButtonText: 'NO',
        confirmButtonText: 'SURE',
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                type: 'POST',
                url: '/admin/updateOrderStatus',
                data: { orderId: orderId, newStatus: newStatus, currentPage: currentPage },
                success: function(response) {
                    if (response.success) {
                        const ordersTableBody = document.getElementById("tableItems");
                        ordersTableBody.innerHTML = ''; // Clear existing rows
                        console.log("response data is ", response.orders);

                        response.orders.forEach((order, index) => {
                            const row = document.createElement('tr'); // Create a new row element

                            row.innerHTML = `
                                <td>${order.orderDate}</td>
                                <td class="text-danger font-weight-bold" id="order-details" data-toggle="modal" data-target="#orderDetails" data-order='${JSON.stringify(order)}'>
                                    ${order._id}
                                </td>
                                <td>
                                    ${order.purchaseDetails.productBrand} ${order.purchaseDetails.productName},<br>
                                    ${order.purchaseDetails.size}, ${order.color} (${order.purchaseDetails.quantity})
                                </td>
                                <td>Rs ${order.purchaseDetails.payAmount}</td>
                                <td>
                                    <select name="orderStatus" id="orderStatus-${order._id}" data-order-id="${order._id}">
                                        <option value="" disabled selected>${order.status}</option>
                                        <option value="pending">pending</option>
                                        <option value="dispatched">dispatched</option>
                                        <option value="delivered">delivered</option>
                                        <option value="cancelled">cancelled</option>
                                    </select>
                                </td>
                            `;
                            ordersTableBody.appendChild(row); // Append the newly created row to the table body
                        });

                        // Re-attach the event listener for the newly added select elements
                        $('select[name="orderStatus"]').change(function() {
                            var orderId = $(this).data('order-id');
                            var newStatus = $(this).val();
                            const currentPage = document.getElementById("currentPage").value;
                            showConfirmation(orderId, newStatus, currentPage);
                        });
                    } else {
                        popup("Status changing failed!");
                    }
                },
                error: function(xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        } else {
            window.location.reload();
        }
    });
}

// update order status

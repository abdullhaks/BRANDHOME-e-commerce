                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="couponModalLabel">Available Coupons</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">

                            <div class="col-lg-12 row">

                               
                              <% if(coupons.length > 0) { %>
                                  <% for(let i = 0; i < coupons.length; i++) { %>
                                      <div class="col-lg-3 justify-content-center align-items-center container pb-2 coupon-container" id="couponContainer<%= i %>">
                                          <div class="d-flex card text-center couponcard" id="couponCard<%= i %>">
                                              <div class="offimage"><img src="https://i.imgur.com/DC94rZe.png" width="50"></div>
                                              <div class="offimage2"><img src="https://i.imgur.com/DC94rZe.png" width="50"></div>
                                              <h1><%= coupons[i].off %> % OFF</h1>
                                              <span class="d-block"><%= coupons[i].description %></span>
                                              <a class="mt-4 btn btn-success apply-coupon" id="couponApply<%= i %>" href="javascript:void(0);" 
                                                  data-coupon-id="<%= coupons[i]._id %>" 
                                                  data-total="<%= totalAmount %>" 
                                                  style="color: #ffffff;">Apply</a>
                                          </div>
                                      </div>
                                  <% } %>
                              <% } else { %>
                                  <p>Coupons not available...</p>
                              <% } %>


                            </div>
                            </div>
                          </div>
                        </div>
                      </div>

                    
                        <div class="col-lg-12 row justify-content-center align-items-center container pb-2 hide" id="cancelCoupon">
                               <p>*coupon added successfuly...*</p>
                               <a class="btn btn-danger" onclick="cancelCoupon()">Cancel Coupon</a>
                        </div>
                    


                </div>

            </div>

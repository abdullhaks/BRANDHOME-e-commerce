                                <label>Country</label>
                                <input class="form-control" type="text" placeholder="India" name="country" required
                                    minlength="2" maxlength="30" id="country">
                            </div>

                            <div class="col-md-6 form-group">
                                <label>State</label>
                                <input class="form-control" type="text" placeholder="kerala" name="state" required

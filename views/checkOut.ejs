    $(document).ready(function () {
    $('.apply-coupon').click(function() {
        var couponId = $(this).data('coupon-id');
        var total = $(this).data('total');

        console.log("coupon id, total, index =", couponId, total);

        $.ajax({
            url: '/checkCoupon',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({couponId, total}),
            success: async (response) => {
                if (response.fail) {
                    popup(response.message);
                } else {
                    // Hide all coupons
                    $('.coupon-container').addClass('hide');

                    // Show cancel coupon and update hidden fields
                    document.getElementById("cancelCoupon").classList.remove("hide");

                    document.getElementById("appliedCouponId").value = response.couponId;
                    document.getElementById("saveByCoupon").value = response.saveByCoupon;
                    document.getElementById("couponOff").value = response.couponOff;
                    document.getElementById("totalAmountAfterCoupon").value = response.totalAmountAfterCoupon;

                    await updatePrice();
                    await checkWallet();
                    await checkCOD();

                    // Close the modal
                    $('#couponModal').modal('hide');

                    // Hide the apply coupon button
                    document.getElementById("applyCoupon").classList.add("hide");

                    popup(response.message);
                }
            },
            error: function(xhr, status, error) {
                popup(error);
            }
        });
    });
});

async function cancelCoupon() {
    // Show all coupon containers that were hidden
    document.querySelectorAll('.coupon-container').forEach(function (element) {
        element.classList.remove('hide');
    });

    document.getElementById("applyCoupon").classList.remove("hide");

    // Hide the cancel coupon button
    document.getElementById("cancelCoupon").classList.add("hide");

    // Reset the applied coupon ID
    document.getElementById("appliedCouponId").value = "";

    // Reset the total amount after coupon to the original total amount
    const totalAmount = document.getElementById("totalAmount").value;
    document.getElementById("totalAmountAfterCoupon").value = totalAmount;

    // Adjust the grand total and offer amounts back to their original values
    const saveByCoupon = parseInt(document.getElementById("saveByCoupon").value);
    const totalOffer = parseInt(document.getElementById("totalOffer").value);
    const grandTotal = parseInt(document.getElementById("grandTotal").value);

    const updatedGrandTotal = grandTotal + saveByCoupon;
    document.getElementById("grandTotal").value = updatedGrandTotal;
    document.getElementById("grandTotalText").innerHTML = 'Rs ' + updatedGrandTotal;

    const updatedTotalOffer = totalOffer - saveByCoupon;
    document.getElementById("totalOffer").value = updatedTotalOffer;
    document.getElementById("totalOfferText").innerHTML = 'Rs ' + updatedTotalOffer;

    // Reset coupon-related fields
    document.getElementById("couponOff").value = 0;
    document.getElementById("saveByCoupon").value = 0;

    // Re-check the wallet balance after canceling the coupon
    await checkWallet();
    await checkCOD();

    // Display a popup message indicating the coupon was canceled
    popup("Coupon canceled");
}






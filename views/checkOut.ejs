    <!-- Page Header End -->
    <form class="place-order">
        <input type="hidden" name="productCount" id="productCount" value="<%= products.length %>">

        <div class="container-fluid pt-1">
            <div class="row px-xl-5">
                <div class="col-lg-8 table-responsive mb-5">
                    <table class="table table-bordered text-center mb-0">
                        <thead class="bg-secondary text-dark">
                            <tr>
                                <th>Products</th>
                                <th>Price</th>
                                <th>Size</th>
                                <th>Color</th>
                                <th>Quantity</th>
                                <th>Total</th>

                            </tr>
                        </thead>
                        <tbody class="align-middle">

                            <% if (products.length > 0) {
                                for (let i = 0; i < products.length; i++) { %>

                            <tr>
                                <td class="align-middle">
                                    <%= products[i].productName %>

                                            <input type="hidden" value="<%= products[i].productId %>" name="productId<%= i %>">
                                            <input type="hidden" value="<%= products[i].productName%>" name="productName<%= i %>">
                                            <input type="hidden" value="<%= products[i].productBrand %>" name="productBrand<%= i %>">
                                            <input type="hidden" value="<%= products[i].price %>" name="productPrice<%= i %>">
                                            <input type="hidden" value="<%= products[i].offer %> " name="offer<%= i %>">
                                            <input type="hidden" value="<%= products[i].productImage %>" name="productImage<%= i %>">
                                            <input type="hidden" value="<%= products[i].size %>" name="size<%= i %>">
                                            <input type="hidden" value="<%= products[i].color %>" name="color<%= i %>">
                                            <input type="hidden" value="<%= products[i].quantity %>" name="quantity<%= i %>">
                                            <input type="hidden" value="<%= products[i].youSave %>" name="discount<%= i %>">
                                            <input type="hidden" value="<%= products[i].payAmount %>" name="payAmount<%= i %>">
                                           
                                           
                                </td>
                                <td class="align-middle" id="pricePerUnit">Rs <%= products[i].payAmount/products[i].quantity %></td>
                                <td class="align-middle" name="option" id="size"><%= products[i].size %> </td>
                                <td class="align-middle"  name="color" id="color" ><%= products[i].color %></td>
                                <td class="align-middle" name="quantity" id="quantity" ><%= products[i].quantity %></td>
                                <td class="align-middle" id="totalPrice">Rs <%= products[i].payAmount %></td>
                
                
                

                            </tr>

                            <% } } else { %>
                                <tr>
                                    <td colspan="7">No products can find</td>
                                </tr>
                            <% } %>

                        </tbody>
                    </table>
                </div>
            
                <div class="col-lg-4 row ">

                    <!-- <div class="input-group">
                        <input type="text" class="form-control p-4" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Apply Coupon</button>
                        </div>
                    </div> -->
                    <div class="col-lg-12 row justify-content-center align-items-center container pb-2" id="applyCoupon">
                        <a class="btn btn-success" data-toggle="modal" data-target="#couponModal">Apply Coupon</a>
                    </div>
                    
                    <div class="modal fade" id="couponModal" tabindex="-1" role="dialog" aria-labelledby="couponModalLabel" aria-hidden="true">

<script>

    function toggleDateRange(value) {
        const dateRange = document.getElementById('dateRange');
        if (value === 'dateRange') {
            dateRange.style.display = 'block';
        } else {
            dateRange.style.display = 'none';
        }
    };

    $(document).ready(function () {
        $('#adminSales').submit(function (e) {
            e.preventDefault();

            console.log("AJAX working...");
            var formData = $(this).serialize();
            console.log("Form data is ", formData);

            $.ajax({
                url: "/admin/salesManagement",
                type: "POST",
                data: formData,
                success: function (res) {
                    if (res.success) {
                        document.getElementById("filter").value = res.filter;
                        let salesData;

                        if (res.sales.length === 0) {
                            salesData = `
                            <table id="salesData" class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Order ID</th>
                                        <th class="text-right">Item</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="5">No Sales Yet..</td>
                                    </tr>
                                </tbody>
                            </table>`;
                        } else {
                            salesData = `
                            <table id="salesData" class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Order ID</th>
                                        <th class="text-right">Item&Quantity</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody>`;

                            // Loop through the sales data and build rows
                            res.sales.forEach(sale => {
                                salesData += `
                                <tr>
                                    <td>${new Date(sale.deliveredDate).toLocaleDateString('en-GB')}</td>
                                    <td>${sale.orderId}</td>
                                    <td class="">${sale.item.productName}-(${sale.item.quantity})</td>
                                    <td class="text-left">Rs ${sale.item.payAmount}</td>
                                </tr>`;
                            });

                            salesData += `</tbody></table>`;
                        }

                        document.getElementById("salesData").innerHTML = salesData;
                    }
                }
            });
        });


    });

    $(document).ready(function () {
        $("#pdf").click(function (e) {
            e.preventDefault();

           


            const filter = $("#filter").val();
            const startDate = $("#startDate").val();
            const endDate = $("#endDate").val();

           

            $.ajax({
                url: "/admin/downloadPdf",
                type: "POST",
                data: { filter: filter,startDate:startDate,endDate:endDate },
                xhrFields: {
                    responseType: 'blob'
                },
                success: function (blob, status, xhr) {
                    const link = document.createElement('a');
                    const url = window.URL.createObjectURL(blob);
                    link.href = url;
                    link.download = "sales-report.pdf";
                    document.body.appendChild(link);
                    link.click();
                    window.URL.revokeObjectURL(url);
                },
                error: function (xhr, status, error) {
                    console.error("Error downloading PDF:", error);
                }
            });
        });
    });


    $(document).ready(function () {
    $("#xl").click(function (e) {
        e.preventDefault();

        const filter = $("#filter").val();

        console.log("Downloading Excel file... Filter is:", filter);

        $.ajax({
            url: "/admin/downloadXl",
            type: "POST",
            data: { filter: filter }, // Send filter data as a POST request
            xhrFields: {
                responseType: 'blob' // Important for file download
            },
            success: function (data) {
                // Create a link element, hide it, direct it towards the blob, and then click it
                const url = window.URL.createObjectURL(new Blob([data]));
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = 'sales-report.xlsx';
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error("Failed to download Excel file", textStatus, errorThrown);
            }
        });
    });
});





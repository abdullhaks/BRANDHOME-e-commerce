$(document).ready(function(){
    function validatePasswords() {
        let newPassword = document.getElementById("newPassword").value;
        let repeatPassword = document.getElementById("repeatPassword").value;

        if (newPassword === repeatPassword) {
            document.getElementById("passwordError").classList.add("hide");
            document.getElementById("changePasswordBtn").disabled = false;
        } else {
            document.getElementById("passwordError").classList.remove("hide");
            document.getElementById("changePasswordBtn").disabled = true;
        }
    };

    // document.getElementById("newPassword").addEventListener("input", validatePasswords);
    document.getElementById("repeatPassword").addEventListener("input", validatePasswords);
});

document.getElementById("newPassword").addEventListener("input", function() {
    const passwordInput = this.value.trim();
    let repeatPassword = document.getElementById("repeatPassword").value;
    const errorElement = document.getElementById("newPasswordError");
    const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/;

    if (passwordPattern.test(passwordInput)) {
        errorElement.classList.add("hide");
        if(passwordInput==repeatPassword){
            document.getElementById("changePasswordBtn").disabled = false; 
        }
        
    } else {
        errorElement.classList.remove("hide");
        document.getElementById("changePasswordBtn").disabled = true;
    }
});

$(document).ready(function(){
    document.getElementById("changePasswordForm").addEventListener("submit", function(e) {
        e.preventDefault();

        const formData = $(this).serialize();

        console.log("formdata is ",formData);

        $.ajax({
            url: '/changePassword',
            type: "POST",
            data: formData,
            dataType: "json",

            success: function(res) {
                if (res.success) {
                    popup(res.msg);  // Popup message

                    setTimeout(function () {
                        window.location.href = "/profile";
                    }, 2000);
                        // Redirect if necessary
                    
                } else {
                    popup(res.msg);  // Display error message
                }
            },
            error: function(err) {
                console.error('Error:', err);
                popup('An error occurred. Please try again.');
            }
        });
    });
});



</script>


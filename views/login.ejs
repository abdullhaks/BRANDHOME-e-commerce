

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>login</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<!-- MATERIAL DESIGN ICONIC FONT -->
		<link rel="stylesheet" href="/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

		<!-- STYLE CSS -->
		<link rel="stylesheet" href="/sheets/style.css">
	</head>

	<body>

		<div class="wrapper" style="background-image: linear-gradient(to right, rgba(243, 167, 27, 0), rgb(236, 168, 104));">
			<div class="inner">
				<div class="image-holder">
					<img src="/images/side.jpeg" alt="">
					<h1>BRANDHOME</h1>
				</div>
				<form action="/login" method="post">
					<h3>LOGIN</h3>

					
					
					
					<div class="form-wrapper">
						<input type="email" name="email"  placeholder="Email Address" class="form-control" value="<%= email %>">
						<i class="zmdi zmdi-email"></i>
					</div>
					<% if (emailErrors) { %>
						<% emailErrors.forEach(function(error) { %>
							<p style="color: red;"><%= error.msg %></p>
						<% }) %>
					  <% } %>
					
					<div class="form-wrapper">
						<input type="password" placeholder="Password" name="password"  class="form-control" value="<%= password %>">
						<i class="zmdi zmdi-lock"></i>
					</div>
					<% if (passwordErrors) { %>
						<% passwordErrors.forEach(function(error) { %>
							<p style="color: red;"><%= error.msg %></p>
						<% }) %>
					  <% } %>

					<div class="container" >
						<a href="/register">create an account</a>
						<a href="/forgetPassword" style="float: right;">forget password</a>
					</div>

					

          
					
					<button >login
						<i class="zmdi zmdi-arrow-right"></i>
					</button>
					<div class="container">
						<a href="http://localhost:7000/auth/google/callback" id="google" >signin with google </a>
					</div>
				</form>

				
			</div>
			
		</div>

		
		
	</body>

	<script>

		const signinWithGoogle = ()=>{
			window.open("http://localhost:7000/auth/google/callback","_self")
		}
	</script>
</html>
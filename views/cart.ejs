            var productsJson = productsDataElement.getAttribute('data-products');
            console.log("productsJson is "+productsJson);
            var products = JSON.parse(productsJson); // Parse it into a JavaScript object
            console.log("products is "+products);
            var placeOrderButton = document.getElementById("placeOrder");
            var stockAlert2 = document.getElementById("stockAlert");
   

            

             products.forEach((product, index) => {
                updateQuantity(product._id, index); // Initialize quantity dropdowns
            });

            if(stockCheck==1){
               stockAlert2.classList.remove("hide");
               placeOrderButton.disabled = true;
            }

            updateGrandTotal();
        });

function updatePrice(index) {
    var quantity = document.getElementById('quantity' + index).value;
    var pricePerUnitText = document.getElementById('pricePerUnit' + index).innerHTML;
    var pricePerUnit = parseFloat(pricePerUnitText.replace(/[^\d.]/g, ''));

    if (!isNaN(pricePerUnit)) {
        var totalPrice = quantity * pricePerUnit;
        document.getElementById('totalPrice' + index).innerHTML = 'Rs ' + totalPrice.toFixed(2);
        
        updateGrandTotal();
    } else {
        console.log("Invalid price");
    }
}

function updateQuantity(productId, index) {
    var size = document.getElementById("size" + index).value;
    var color = document.getElementById("color" + index).value;
    var quantityDropdown = document.getElementById("quantity" + index);
    var placeOrderButton = document.getElementById("placeOrder");
    var stockAlert = document.getElementById("stockAlert" + index);
    var stockAlert2 = document.getElementById("stockAlert");
    var stock = document.getElementById("stock" + index);

    var xhr = new XMLHttpRequest();
    xhr.open("GET", `/getStock?productId=${productId}&size=${size}&color=${color}`, true);
    xhr.onreadystatechange = function () {
        if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
            var stockData = JSON.parse(xhr.responseText);
           quantityDropdown.innerHTML = "";
            if (stockData.quantity === 0) {
               // var option = document.createElement("option");
                //option.text = "out of stock";
                quantityDropdown.value = 0 ;
                stockAlert.classList.remove("hide");
                stockAlert2.classList.remove("hide");
                console.log("first"+stockCheck);
                stockCheck=1;
                console.log("second"+stockCheck);
                stock.classList.add("hide");
                
                //quantityDropdown.add(option);
                updatePrice(index);
                placeOrderButton.disabled = true; // Disable the "Place Order" button
            } else {
                // for (var i = 1; i <= stockData.quantity; i++) {
                //     var option = document.createElement("option");
                //     option.text = i;
                //     option.value = i;
                //     quantityDropdown.add(option);
                // }
                stockAlert.classList.add("hide");
                stockAlert2.classList.add("hide");
                stock.classList.remove("hide");
                quantityDropdown.value = 1 ;
                quantityDropdown.max = stockData.quantity; 

                updatePrice(index);
                placeOrderButton.disabled = false; // Enable the "Place Order" button
            }
        }
    };
    xhr.send();
}

function updateGrandTotal() {
            var grandTotal = 0;
            var productsDataElement = document.getElementById('productsData');
            var productsJson = productsDataElement.getAttribute('data-products');
            var products = JSON.parse(productsJson); // Parse it into a JavaScript object

            products.forEach((product, index) => {
                var totalPriceText = document.getElementById('totalPrice' + index).innerHTML;
                var totalPrice = parseFloat(totalPriceText.replace(/[^\d.]/g, ''));
                if (!isNaN(totalPrice)) {
                    grandTotal += totalPrice;
                }
            });
            document.getElementById('grandTotal').innerHTML = 'Rs ' + grandTotal.toFixed(2);
            document.getElementById("totalAmount").value = grandTotal
        }

// Attach event listeners to size and color dropdowns for each product
products.forEach((product, index) => {
    document.getElementById("size" + index).addEventListener("change", function () {
        updateQuantity(product._id, index);
    });
    document.getElementById("color" + index).addEventListener("change", function () {
        updateQuantity(product._id, index);
    });
});



</script>


<script>

    function popup (popupMsg){

            

    Swal.fire({
                title: '',
                text: popupMsg,
                //icon: 'success',
                timer: 8000,
                showConfirmButton: false,
            })
    };

   $(document).ready(function(){
    $(".small-img").hover(function(){
        $(".big-img").attr('src', $(this).attr('src'));
    });

    $(".big-img").imagezoomsl({
        zoomrange: [3, 3]
    });

    // Invoke checkQuantity function when the page loads
    checkQuantity();

    $("#addToCart").click(function(){ 
        
        addToCart()
    
    });
});

function checkQuantity() {
    var productId = document.getElementById("productId").value;
    var size = document.getElementById("size").value;
    var color = document.getElementById("color").value;
    var stockTrue = document.getElementById("stock-true");
    var stockFalse = document.getElementById("stock-false");

    console.log("Checking quantity for size:", size, "and color:", color);

    $.ajax({
        url: "/getStockFromPrductDetails",
        type: "GET",
        data: { size, color, productId },

        success: function(res) {
            if (res.success) {
                stockTrue.classList.remove("hide");
                stockFalse.classList.add("hide");
            } else {
                stockTrue.classList.add("hide");
                stockFalse.classList.remove("hide");
            }
        },
        error: function(err) {
            console.error("Error fetching stock:", err);
        }
    });

};


    function addToCart() {



        console.log("add to cart is working........")
    // Get the selected size and color values
    var size = document.getElementById('size').value;
    var color = document.getElementById('color').value;
    var productId = document.getElementById('productId').value;


    $.ajax({
        url: "/addtoCart",
        type: "POST",
        data: { productId ,color:color,size:size},

        success: function(res) {
            if(res.success){
                window.location.href="/products";
            }else{
                popup(res.msg||"please login");
            }
        },
        error: function(err) {
            console.log("Error adding to cart:", err);
        }
    
    })

    }


   




</script>




